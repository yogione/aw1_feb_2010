<h1>New story</h1>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :plant_or_division %><br />
    <%= f.text_field :plant_or_division %>
  </p>
  <p>
    <%= f.label :howmany_years %><br />
    <%= f.text_field :howmany_years %>
  </p>
  <p>
    <%= f.label :pet_story %><br />
    <%= f.text_area :pet_story %>
  </p>
  <p>
    <%= f.label :message_to_company %><br />
    <%= f.text_area :message_to_company %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', stories_path %>